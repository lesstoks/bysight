{
  "name": "api",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "api:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "api:build:development"
          },
          "production": {
            "buildTarget": "api:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },

      "db:build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "docker compose build bysight_db"
        }
      },
      "db:up": {
        "executor": "nx:run-commands",
        "options": {
          "command": "docker compose up -d bysight_db"
        },
        "dependsOn": ["db:build"]
      },
      "db:down": {
        "executor": "nx:run-commands",
        "options": {
          "command": "docker-compose down bysight_db"
        }
      },

      "migration:create": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "apps/api",
          "command": "npx mikro-orm migration:create --blank"
        }
      },

      "docker-build": {
        "dependsOn": [
          "build"
        ],
        "command": "docker build -f apps/api/Dockerfile . -t bysight-api"
      }
    }
  }
}
