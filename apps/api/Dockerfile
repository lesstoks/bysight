FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system bysight-api && \
          adduser --system -G bysight-api bysight-api

COPY apps/api/dist bysight-api/
